         version="4.0">
    <!-- Cuando inice la aplicacion carga el servlet-->


    <servlet-mapping>
        <servlet-name>carritoController</servlet-name>
        <url-pattern>/carrito-controller</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>compraController</servlet-name>
